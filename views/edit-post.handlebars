<section class="m-3">

    <div class="container mt-3">

        <h1> Edit a Post </h1>

        <form class="edit-post-form">

            <div class="mb-3">
                 <label for="post-title" class="form-label">Post Title</label>
                <input name="post-title" type="text" value="{{post.title}}" class="form-control">
            </div>

            <div class="mb-3">
                <label for="achievement-title" class="form-label">Achievement Title</label>
                <input name="achievement-title" type="text" value="{{post.achievement.title}}" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary">Save Post</button>
            <button type="submit" class="btn btn-danger delete-post-btn">Delete Post</button>

        </form>

    </div>

</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>