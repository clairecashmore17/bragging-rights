<article class="post">
  <div class="title">
    <p>{{post.title}}</p>

  </div>
  <div class="meta">
    <div class="card" style="width: 18rem;">
      <img
        class="card-img-top"
        src="{{post.image.img_url}}"
        alt="Card image cap"
      />
      <div class="card-body">
        <p class="card-text">{{post.achievement.title}}</p>
      </div>
    </div>

    username of post author:
    {{post.user.username}}
    game title:
    {{post.achievement.game.game_title}}

    on
    {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>

  </div>
</form>

<div class="comments">
  {{#each post.comments as |comment|}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>