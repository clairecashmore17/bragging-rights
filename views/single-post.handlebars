<article class="post">
  <div class="title">
    <p>{{post.title}}</p>

  </div>
  <div class="meta">

    <img src="{{post.image.img_url}}" />

    Achievement title:
    {{post.achievement.title}}
    username of post author:
    {{post.user.username}}
    game title:
    {{post.achievement.game.game_title}}

    on
    {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>

  </div>
</form>

<div class="comments">
  {{#each post.comments as |comment|}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>

<script src="/javascript/comment.js"></script>